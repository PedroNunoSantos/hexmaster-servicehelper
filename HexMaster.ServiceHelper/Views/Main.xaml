<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:HexMaster.Views"
	x:Name="frmMain" x:Class="HexMaster.Views.Main"
	Title="Main" Height="200" Width="300" AllowsTransparency="True" Background="Transparent" WindowStyle="None"
	MinWidth="300" MinHeight="200" MouseDown="frmMain_MouseDown"
	Loaded="frmMain_Loaded" Topmost="True" Opacity="0.25" MouseEnter="frmMain_MouseEnter" MouseLeave="frmMain_MouseLeave">
	<Grid x:Name="grdMain">
		<Border x:Name="bdrMain" BorderBrush="Black" BorderThickness="2" CornerRadius="8">
			<Border.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FFEEEEEE" />
					<GradientStop Color="Gainsboro" Offset="1" />
				</LinearGradientBrush>
			</Border.Background>
			<Grid>
				<TextBlock TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Margin="11,4,62,0" FontWeight="Thin"
				           FontSize="18.667" Text="HexMaster Service Helper" />
				<StackPanel x:Name="spServices" Margin="6,32,6,6">
					<local:ServiceView VerticalAlignment="Top" />
					<local:ServiceView />
				</StackPanel>
				<Button x:Name="btnMinimize" Content="" HorizontalAlignment="Right" VerticalAlignment="Top" Width="24" Height="24"
				        Margin="0,4,33,0" BorderBrush="{x:Null}" Click="MinimizeButtonClick">
					<Button.Background>
						<ImageBrush ImageSource="/HexMaster.ServiceHelper;component/Media/minimize.png" />
					</Button.Background>
				</Button>
				<Button x:Name="btnExit" Content="" HorizontalAlignment="Right" VerticalAlignment="Top" Width="24" Height="24"
				        Margin="0,4,4,0" BorderBrush="{x:Null}" Click="ExitButtonClick">
					<Button.Background>
						<ImageBrush ImageSource="/HexMaster.ServiceHelper;component/Media/exit.png" />
					</Button.Background>
				</Button>
			</Grid>
		</Border>

	</Grid>
</Window>