<Window x:Class="ServiceDebugger.Views.ConsoleLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:ServiceDebugger.Wpf"
        mc:Ignorable="d"
        Title="Console Output" Height="500" Width="400">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <ToolBar Grid.Row="0" ToolBarTray.IsLocked="True">
                <Button Click="BtClearLog_OnClick">Clear Log</Button>
            </ToolBar>
            <TextBlock Grid.Row="1" x:Name="TbLog" Margin="0,5" ></TextBlock>
        </Grid>
    </Grid>
</Window>
